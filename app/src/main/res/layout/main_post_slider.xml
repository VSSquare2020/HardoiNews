<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ripple_effect"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_auto_image_slider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY" />


    <FrameLayout
        android:id="@+id/fl_shadow_container"
        android:layout_width="match_parent"
        android:background="@drawable/backgroud_overlay"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/slider_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:weightSum="2"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/slider_authorTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingStart="2dp"
            android:drawableStart="@drawable/ic_perm_identity_black_24dp"
            android:layout_weight="0.5"
            android:paddingEnd="2dp"
            android:textColor="@color/white"
            android:textSize="10sp" />

            <TextView
                android:id="@+id/slider_dateTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:textColor="@color/white"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/slider_categoryTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingEnd="6dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>