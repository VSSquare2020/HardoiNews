<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/postDetail_layout"
    tools:context=".WPPostDetails">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/post_details_container"
        android:layout_marginBottom="80dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/details_post_progress"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_image_container"
        >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/detail_post_image"
        android:scaleType="fitXY"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:background="@drawable/backgroud_overlay"
            android:layout_height="70dp"/>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/post_details_container"
        android:layout_below="@id/detail_image_container"
        android:background="@color/grey_color"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:background="@color/grey_color"
        android:id="@+id/post_details_category"
        android:textSize="14sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/details_post_title"
        android:layout_below="@id/post_details_category"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="3dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/grey_color"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="7dp"
        android:background="@color/grey_color"
        android:id="@+id/details_post_author"
        android:layout_below="@id/details_post_title"
        android:drawableStart="@drawable/identity_black_24dp"
        android:text="Author | "
        android:textSize="12sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/grey_color"
        android:id="@+id/details_post_date"
        android:layout_alignBaseline="@id/details_post_author"
        android:layout_toEndOf="@id/details_post_author"
        android:text="Date"
        android:textSize="12sp"/>
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_share_white_24dp"
        android:id="@+id/fab_share"
        app:elevation="5dp"
        app:fabSize="auto"
        app:pressedTranslationZ="12dp"
        />

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/postwebview"
        android:layout_below="@id/post_details_container"
        android:clickable="false"
        android:focusable="false"
        android:scrollbars="vertical"
        android:fadeScrollbars="true"
        android:focusableInTouchMode="false"/>


</RelativeLayout>